<%= provide(:title, "Edit Price")%>
<div class="row">
    <div class="col-3">
        <%= render "lists" %>
    </div>
    <div class="col-9">
        <div class="card w-100" style="width: 18rem;">
            <div class="card-header text-center">
            <h3>Price</h3>
        </div>
        <div class="card-body">
            <%= form_with(model: @room, local: true)  do |f| %>
                <p>Price(USD)</p>
                <%= f.number_field :price, class:"form-control", placeholder: "Ex. 100" %><br>
                <div class="text-center">
                    <%= f.submit "Save", class:"btn btn-outline-warning m-2" %>
                </div>
            <% end %>  
        </div>
    </div>
</div>