<div class="card w-100" style="width: 18rem;">
    <div class="card-header text-center">
        <h3><%= "#{header_list}"%></h3>
    </div>
    <div class="card-body">
        <%= form_with(model: @room, local: true)  do |f| %>
            <div class="row">
                <div class="col-4">
                    <p>Home type</p>
                    <%= f.select :home_type, [["Apartment","Apartment"], ["House","House"], ["Bed & Breakfast","Bed & Breakfast"]], {include_blank: "Select..."}, {class:"form-select", required: true} %><br>
                    <p>Bedroom</p>
                    <%= f.select :bedroom, [["1",1], ["2",2], ["3",3],["4+",4]], {include_blank: "Select..."}, {class:"form-select", required: true} %><br>
                </div>
                <div class="col-4">
                    <p>Room type</p>
                    <%= f.select :room_type, [["Entire","Entire"], ["Private","Private"], ["Shared","Shared"]], {include_blank: "Select..."}, {class:"form-select", required: true} %><br>
                    <p>Bathroom</p>
                    <%= f.select :bathroom, [["1",1], ["2",2], ["3",3],["4+",4]], {include_blank: "Select..."}, {class:"form-select", required: true} %><br>
                </div>
                <div class="col-4">
                    <p>Accommodate</p>
                    <%= f.select :accommodate, [["1",1], ["2",2], ["3",3],["4+",4]], {include_blank: "Select..."}, {class:"form-select", required: true} %><br>
                </div>
            </div>
            <div class="text-center">
                <%= f.submit "#{btn_name}", class:"btn btn-outline-warning m-2" %>
            </div>
        <% end %>  
    </div>
</div>